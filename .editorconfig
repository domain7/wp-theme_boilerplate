# This file is for unifying the coding style for different editors and IDEs
# editorconfig.org

# WordPress Coding Standards
# http://make.wordpress.org/core/handbook/coding-standards/

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.php]
indent_style = tab
indent_size = 4

[*.html]
indent_style = tab
indent_size = 4

[*.css]
indent_style = tab
indent_size = 4

[*.scss]
indent_style = tab
indent_size = 4

[*.js]
indent_style = tab
indent_size = 4

[*.json]
indent_style = space
indent_size = 2

[*.txt,wp-config-sample.php]
end_of_line = crlf
